<% layout('layouts/boilerplate') -%>
    <div class="row">
        <h1 class="text-center">Edit product</h1>
        <div class="col-6 offset-3">
            <form action="/products/<%=product._id%>?_method=PUT" method="POST">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Product
                        Name</span>
                    <input type="text" class="form-control" aria-label="name"
                        aria-describedby="inputGroup-sizing-default" name="product[name]" value="<%=product.name%>"
                        required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" name="product[price]" value="<%=product.price%>" required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Image URL</span>
                    <input type="text" class="form-control" name="product[image]" value="<%=product.image%>" required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Quantity</span>
                    <input type="text" class="form-control" name="product[quantity]" value="<%=product.quantity%>"
                        required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Description</span>
                    <input type="text" class="form-control" name="product[description]" value="<%=product.description%>"
                        required>
                </div>
                <button class="btn btn-warning">Confirm</button>

            </form>

            <form action="/products/<%=product._id%>" method="GET">
                <button class="btn btn-secondary">Cancel</button>
            </form>
        </div>

    </div>